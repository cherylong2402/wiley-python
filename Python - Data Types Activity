#Activity 4
V=(float(input("Enter value:"))
P=float(input("Enter initial deposit:"))
r=float(input("Enter interest rate as a fraction (eg 0.05):"))
n=int(input("Enter the number of times per year interest is calculated:"))
t=int(input("Enter the number of years since the initial deposit:"))

V = P(1 + r/n)^nt
print (V)

#Activity 5
principal=input(float("Enter principal amount:"))
rate=float(input("Enter the rate of interest:"))
days=int(input("Enter the number of days for a loan:"))
interest = principal * rate * days / 365
print(interest)

#Activity 6
a = 0
b = 1

if a < b:
  print ("a < b = TRUE")

if a+b == 1:
  print ("a+b==1 = TRUE")

if b > a:
  print ("b > a = TRUE")
  
if a < b:
  print("a > b =FALSE")
  
if a!=b :
  print ("a == b= FALSE")
  
if b > a:
  print ("b < a = FALSE")


#Activity 7
Number=int(input("Enter a number:"))
BooleanNumber=bool(Number)
BinaryEquivalent=bin(Number)
SquareRoot=Number**0.5

print("You selected",Number)
print("The boolean of your number is",BooleanNumber)
print("The binary equivalent of your number is", BinaryEquivalent)
print("The square root of your number is",SquareRoot)

#Activity 8
n1=int(input("Enter an integer:"))
n2=int(input("Enter an integer:"))
n3=int(input("Enter an integer:"))
n4=int(input("Enter an integer:"))
n5=int(input("Enter an integer:"))
product=n1*n2*n3*n4*n5
average=(n1+n2+n3+n4+n5)/5
sum=n1+n2+n3+n4+n5
print("Values you entered:",n1,n2,n3,n4,n5)
print("Product of the values:",product)
print("Average of the values:",average)
print("Sum of the values:",sum)

